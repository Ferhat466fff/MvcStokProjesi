@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model  PagedList.IPagedList<Tbl_Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@*üste sayfalı listelesin diye pagedlist tanımladık*@
<table class="table table-bordered ">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATERGOIID</th>
                <td>@ktgr.KATEGORIAD</td>
                <td><a href="/Kategori/SIL/@ktgr.KATERGOIID" class="btn btn-danger">SİL</a></td>
                @*HREF ADRES TUTAR kategorı(controller ısmı)/sil ındeximiizn ismi*@
                <td><a href="/Kategori/KategoriGetir/@ktgr.KATERGOIID " class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }

    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
@* IPagedList,MODEL ÜSTTE TANIMLAMIŞTIK SAYFA-->KATEGORİCONTROLLER tanımladık                  *@

<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
