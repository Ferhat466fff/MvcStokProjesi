@model MvcStok.Models.Entity.Tbl_Satis
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@*Satışlar butonuna tıklandığında aşağıdakiler olsun*@

@*modal-->açılan pencereye dneiyor satışyapa tıkladıgında acılan penceredir*@
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Satış Yap</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Yapma Ekranı</h2>      
            </div>
            <form method="post" action="/Satis/YeniSatis" >@*POST-->tıklama işlemi yapılırsa action-->tıklandıktan sonra napsın *@
                <div class="modal-body">
                    <label>
                        Ürün Adı
                    </label>
                    @Html.TextBoxFor(m => m.URUN, new { @class = "form-control" })
                    <br />

                    <label>
                        Müşteri Adı-Soyadı
                    </label>
                    @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control" })
                    <br />

                    <label>
                        Adet
                    </label>
                    @Html.TextBoxFor(m => m.ADET, new { @class = "form-control" })
                    <br />

                    <label>
                        Fiyat
                    </label>
                    @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
                    <br />
                    <button type="submit" class="btn btn-info">Satış İşlemi Yap</button>
                  <button class="btn btn-danger" data-dismiss="modal" style="margin-left:545px; margin-top:-862px;">X</button>

                </div>
            </form>
        </div>
    </div>
</div>
