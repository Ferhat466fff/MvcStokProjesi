@model MvcStok.Models.Entity.Tbl_Musteriler
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@*Yeni Müşteri Ekleme Butonuna Tıklandığında*@

<form class="form-group" method="post">
    <div class="form-group">

        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })@*textboxa Müşteriadı alsın*@
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:blue" })
        <label>Müşteri Soyadı</label>
        <br />
        @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })@*textboxa kategorıadı alsın*@
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:blue" })
        @*daha oncesınde entitiy girip tblmüşteride mesaj verdik bize mesaj verecek mesajın rengi mavi*@

    </div>

    <br />
    <div>
        <button class="btn-primary "id="btn1">MÜŞTERİ EKLE</button>
    </div>

    <script>
        $('#btn1').click(function () {//müşteri ekleye tıklandıgında btn1 diye yıkarda müşteri ekleye ıd verdik
            alert('Müşteri Eklme İşlemi Yapıldı...!');//mesajı versin
        });
    </script>



</form>

